<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./report.md</file>
        <append>true</append>
        <encoder>
            <pattern>%d [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
